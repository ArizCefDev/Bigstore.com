@model DTO.EntityDTO.ProductDTO

@{
    ViewData["Title"] = "ProductAdd";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div id="page-wrapper">
    <div class="main-page">
        <div class="forms">
            <h2 class="title1">Məhsullar Formu</h2>
            <div class="form-grids row widget-shadow" data-example-id="basic-forms">
                <div class="form-title">
                    <h4>Yeni Form :</h4>
                </div>
                <div class="form-body">
                    <form method="post">
                        
                        <div class="form-group">
                            <label for="exampleInputEmail1">Foto</label>
                            <input type="text" asp-for="ImageURL" class="form-control" id="exampleInputEmail1" placeholder="Məlumatı daxil edin">
                        </div>
                        <div class="form-group">
                            <label for="exampleInputEmail1">Başlıq</label>
                            <input type="text" asp-for="Title" class="form-control" id="exampleInputEmail1" placeholder="Məlumatı daxil edin">
                        </div>
                        <div class="form-group">
                            <label for="exampleInputEmail1">Mətn</label>
                            <input type="text" asp-for="Text" class="form-control" id="exampleInputEmail1" placeholder="Məlumatı daxil edin">
                        </div>
                        <div class="form-group">
                            <label for="exampleInputEmail1">Qiymət</label>
                            <input type="text" asp-for="Price" class="form-control" id="exampleInputEmail1" placeholder="Məlumatı daxil edin">
                        </div>
                        <div class="form-group">
                            <label for="exampleInputEmail1">Endirimli Qiymət</label>
                            <input type="text" asp-for="Discount" class="form-control" id="exampleInputEmail1" placeholder="Məlumatı daxil edin">
                        </div>
                        <div class="form-group">
                            <label for="exampleInputEmail1">Status</label>
                            <select asp-for="Status" class="form-control" id="exampleInputEmail1">
                                <option></option>
                                <option>Endirimli</option>
                            </select>
                        </div>
                       
                        <div class="form-group">
                            <label for="exampleInputEmail1">Kateqoriya</label>
                            <input type="text" asp-for="CategoryID" class="form-control" id="exampleInputEmail1" placeholder="Məlumatı daxil edin">
                        </div>

                        <button type="submit" class="btn btn-default">Əlavə et</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>


