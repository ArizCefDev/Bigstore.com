@model IEnumerable<DTO.EntityDTO.ProductDTO>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_HomeLayout.cshtml";
}


<!--content-->
<div class="content-top ">
    <div class="container ">
        <div class="spec ">
            <h3>Endirimli Məhsullarımız</h3>
            <div class="ser-t">
                <b></b>
                <span><i></i></span>
                <b class="line"></b>
            </div>
        </div>
        <div class="tab-head ">
            @await Component.InvokeAsync("CategoryList")
            <div class=" tab-content tab-content-t ">
                <div class="tab-pane active text-style" id="tab1">
                    <div class=" con-w3l">
                        @foreach (var item in Model)
                        {
                            <div class="col-md-3 m-wthree">
                                <div class="col-m">
                                    <a href="#" data-toggle="modal" data-target="#myModal1" class="offer-img">
                                        <img src="@item.ImageURL" class="img-responsive" alt="">

                                        <div class="offer"><p><span>@item.Status</span></p></div>
                                    </a>
                                    <div class="mid-1">
                                        <div class="women">
                                            <h6><a href="single.html">@item.Title</a></h6>
                                        </div>
                                        <div class="mid-2">
                                            <p>
                                                <label>@item.Discount azn</label>
                                                <em class="item_price">@item.Price azn</em>
                                            </p>
                                            <div class="block">
                                                <div class="starbox small ghosting"> </div>
                                            </div>
                                            <div class="clearfix"></div>
                                        </div>
                                        <div class="add">
                                            <button class="btn btn-danger my-cart-btn my-cart-b " data-id="1" data-name="Moong" data-summary="summary 1" data-price="1.50" data-quantity="1" data-image="images/of.png">Add to Cart</button>
                                        </div>

                                    </div>
                                </div>
                            </div>
                        }

                        <div class="clearfix"></div>
                    </div>
                </div>

            </div>
        </div>

    </div>
</div>

<div class="head-t"></div>